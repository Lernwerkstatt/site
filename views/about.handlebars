<div class="content">
  <div class="container homeheader">
    <div class="row row-header">
      <div class="col-12 col-sm-7">
        <h1>Das Team</h1>
        <p>Wir sind die Lernwerkstatt</p>
      </div>
      <div class="col-12 col-sm align-self-center">
        <img src="https://res.cloudinary.com/hrscywv4p/image/upload/c_fill,fl_lossy,h_200,w_200,f_auto,g_faces:auto,q_auto/v1/253787/6b3c1ba6-333a-4dfb-80b1-686bd4b9e0db_s4dlam.png"
          class="img-fluid rounded-circle" alt="Lernwerkstatt Logo">
      </div>
    </div>
  </div>
  <div class="container">
    <main>
      <div class="row">
        <hspace="20px">
          {{#each team}}
          <div class="hvrbox">
            <img src={{img}} alt={{name}} class="hvrbox-layer_bottom" style="height: 150px; width: 150px;">
            <div class="hvrbox-layer_top">
              <div class="hvrbox-text">{{name}}</div>
            </div>
          </div>
          {{/each}}
      </div>
      </hspace>
    </main>
  </div>
</div>