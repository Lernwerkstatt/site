<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-7">
        <h1>Das Team</h1>
        <p>Wir sind die Lernwerkstatt</p>
      </div>
      <div class="col-12 col-sm-5 align-self-center">
        <img src="img/logo.png" class="img-fluid rounded-circle" alt="Lernwerkstatt Logo">
      </div>
    </div>
  </div>
</div>
<div class="container-fluid text-center">
  <div class="team-row">
    <div class="col-sm-10" id="team">
      {{#each team}}
      <div class="team-box" data-toggle="collapse" data-target="#{{id}}">
        <img src={{img}} alt={{name}} class="img-fluid rounded-circle" style="height: 160px; width: 160px;">
        <p class="lead">{{name}}</p>
      </div>
      <div id="{{id}}" class="collapse" data-parent="#team">
        <div class="card-body team-description">
          {{description}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
