  crossorigin="" />

<div class="container">
  <div class="mt-5 text-center">
    <h1>Vor Ort in Alt-Treptow</h1>
    <address>
      Die Lernwerkstatt - Lernen & lernen lassen e.V. <br>
      <a href="mailto:info@die-lernwerkstatt.de">info@die-lernwerkstatt.de</a> <br>
      Karl-Kunger-Str. 55 <br>
      12435 Berlin <br>
      +49 176 87840154
    </address>
    <br>
    <h6>Anreise mit Bus:</h6>
    <p>
      Von S-Bahn Treptower Park oder von U-Bahn Hermannplatz den Bus 194
      nehmen bis Bouchéstraße
    </p>
    <div class="mt-2 mb-4" id="mapid"></div>
    <img src="img/contact/contact-map.png" alt="handgezeichnete Anfahrtsskizze zur Die Lernwerkstatt" style="width: 42%" />
  </div>
  <form class="col-5 offset-3 mt-5">
    <h4 class="bg-primary text-white text-center pb-3 pt-3 rounded">Kontaktiere uns</h4>
    <div class="form-group m-0">
      <label for="name"></label>
      <input type="text" class="form-control" id="name" placeholder="Name" required>
    </div>
    <div class="form-group m-0">
      <label for="email"></label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="E-Mail" required>
    </div>
    <div class="form-group">
      <label for="message"></label>
      <textarea type="text" class="form-control" id="message" placeholder="Nachricht" required></textarea>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="contact-check" required>
      <label class="form-check-label" for="contact-check"><span>Hiermit bestätige ich meine Übereinstimmung mit <a href="#"
            data-toggle="modal" data-target="#termsModal">Terms
            &amp; Conditions</a> und <a href="#" data-toggle="modal" data-target="#privacyModal">Privacy Policy</a>.</span></label>
    </div>
    <button id="submit-button" type="submit" class="btn btn-primary mt-2">Abschicken</button>
  </form>
</div>

{{#each agreements}}
{{> contact/modal this}}
{{/each}}

