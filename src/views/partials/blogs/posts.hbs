<div class="col-xs-8 col-md-6 col-lg-4">
  <div class="card mt-3 mb-5" style="height: 22rem; max-width: 100%">
    <img class="card-img-top" style="height: 14rem; object-fit: cover;" src="{{ imagelink }}" alt="{{ title }}">
    <div class="card-body">
      <h3 class="card-title" style="overflow-wrap: normal"><a href="/blogs/{{ id }}">{{ title }}</a></h3>
      <p class="card-text"><small class="text-muted">{{ author }}, {{ date }}</small></p>
    </div>
  </div>
</div>
