<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

<form action="/blogs/create" method="post" autocomplete="off" enctype="application/json">
  <div class="form-group col-md-6">
    <label>{{{__ "blogpost_title"}}}:</label>
    <input type="text" class="form-control" name="title" required>
  </div>
  <div class="form-group col-md-6">
    <label>{{{__ "blogpost_author"}}}:</label>
    <input type="text" class="form-control" name="author" required>
  </div>
  <div class="form-group col-md-6">
    <label>{{{__ "blogpost_imagelink"}}}:</label>
    <input type="url" class="form-control" name="imagelink">
  </div>
  <div class="form-group col-md-6">
    <label>{{{__ "blogpost_content"}}}:</label>
    <textarea name="content" id="main-content" class="form-control" rows="10"></textarea>
  </div>
  <div class="col-md-6">
    <input type="submit" value="{{{__ "common_submit"}}}">
    <input type="reset">
  </div>
</form>

<script>
  var simplemde = new SimpleMDE({
    element: document.getElementById("main-content")
  });
</script>
