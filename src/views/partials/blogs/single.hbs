<div class="d-flex justify-content-center">
  <div class="col-xs-12 col-md-10 mt-3">
    <article class="mb-5">
      <img src="{{ imagelink }}" alt="{{ title }}" class="img-fluid w-100 mb-5"
        style="max-height: 16rem; object-fit: cover;">
      <div class="mx-4">
        <h1 style="overflow-wrap: normal">{{ title }}</h1>
        <p class="text-muted"><small>{{ author }}, {{ date }}</small></p>
        {{{ content }}}
      </div>
    </article>
  </div>
</div>
