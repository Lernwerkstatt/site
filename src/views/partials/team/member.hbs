<div class="d-inline-block cursor-pointer align-top mr-3 mb-3" data-toggle="modal" data-target="#{{id}}"
  style="max-width: 160px">
  <img src="{{img}}" alt="{{name}}" class="img-fluid" style="height: 160px; width: 160px;">
  <div class="lead text-center">{{name}}</div>
</div>
<div id="{{id}}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="{{id}}Label" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="{{id}}Label">{{name}}</h3>
        <button type="button" class="close d-sm-none" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row mt-3 mb-3">
          <div class="col-sm-3 pr-0 text-center mb-3">
            <img src="{{img}}" alt="{{name}}" style="width: 100%; height: auto; max-width: 160px" />
          </div>
          <div class="col-sm-9 text-left">
            {{description}}
          </div>
        </div>
      </div>
      <div class="modal-footer justify-content-around d-sm-none">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Schlie√üen</button>
      </div>
    </div>
  </div>
</div>
