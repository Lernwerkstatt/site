{{#section "head"}}
<title>{{{__ "contact_title"}}} – {{{__ "common_title"}}}</title>
{{/section}}

{{#section "title"}}
<div class="container my-4">
  <div class="row">
    <div class="col border-bottom">
      <h1 class="h1">{{{__ "contact_title"}}}</h1>
    </div>
  </div>
</div>
{{/section}}

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h2>{{{__ "contactmap_title"}}}</h2>
      <address>
        Die Lernwerkstatt - lernen &amp; lernen lassen e.V. <br>
        <a href="mailto:info@die-lernwerkstatt.org">info@die-lernwerkstatt.org</a> <br>
        Karl-Kunger-Str. 55 <br>
        12435 Berlin <br>
        <a href="tel:+4917687840154">+49 176 87840154</a>
      </address>
      <h6 class="mt-4">{{{__ "contactmap_subtitle"}}}</h6>
      <p>
        {{{__ "contactmap_text"}}}
      </p>
      <div class="w-100 mb-4" id="mapid"></div>
    </div>
    <form class="col-sm-4 mb-4">
      <h2>{{{__ "contact_subtitle"}}}</h2>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <input type="text" class="form-control form-control-sm" id="name" placeholder="{{{__ "common_name"}}}"
              required>
          </div>
          <div class="col">
            <input type="email" class="form-control form-control-sm" id="email" aria-describedby="emailHelp"
              placeholder="{{{__ "common_email"}}}" required>
          </div>
        </div>
      </div>
      <div class="form-group">
        <textarea type="text" class="form-control form-control-sm" id="message" rows="10"
          placeholder="{{{__ "common_letter"}}}" required></textarea>
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="contact-check" required>
        <label class="form-check-label" for="contact-check">
          Hiermit bestätige ich meine Übereinstimmung mit dem <a href="#" data-toggle="modal"
            data-target="#termsModal">Urheberrecht</a> und der <a href="#" data-toggle="modal"
            data-target="#privacyModal">Datenschutzerklärung</a>.
        </label>
      </div>
      <button id="submit-button" type="submit" class="btn btn-primary mt-2">{{{__ "common_submit"}}}</button>
    </form>
  </div>
</div>

{{#each agreements}}
{{> contact/modal this}}
{{/each}}

