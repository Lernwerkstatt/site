  integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
  crossorigin="" />

<div class="container">
  <div class="row mt-3">
    <div class="col-sm-8">
      <h1 class="h4">Vor Ort in Alt-Treptow</h1>
      <address>
        Die Lernwerkstatt - lernen & lernen lassen e.V. <br>
        <a href="mailto:info@die-lernwerkstatt.de">info@die-lernwerkstatt.de</a> <br>
        Karl-Kunger-Str. 55 <br>
        12435 Berlin <br>
        +49 176 87840154
      </address>
      <h6>Anreise mit Bus:</h6>
      <p>
        Von S-Bahn Treptower Park oder von U-Bahn Hermannplatz den Bus 194
        nehmen bis Bouchéstraße
        <br />
        Oder den Bus 104 bis Heidelberger Str. und dann 5 Minuten Fußweg
      </p>
    </div>
    <form class="col-sm-4">
      <p class="h4">Kontaktiere uns</p>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <input type="text" class="form-control form-control-sm" id="name" placeholder="Name" required>
          </div>
          <div class="col">
            <input type="email" class="form-control form-control-sm" id="email" aria-describedby="emailHelp"
              placeholder="E-Mail" required>
          </div>
        </div>
      </div>
      <div class="form-group">
        <textarea type="text" class="form-control form-control-sm" id="message" placeholder="Nachricht"
          required></textarea>
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="contact-check" required>
        <label class="form-check-label" for="contact-check">
          Hiermit bestätige ich meine Übereinstimmung mit <a href="#" data-toggle="modal"
            data-target="#termsModal">Terms
            &amp; Conditions</a> und <a href="#" data-toggle="modal" data-target="#privacyModal">Privacy Policy</a>.
        </label>
      </div>
      <button id="submit-button" type="submit" class="btn btn-primary mt-2">Abschicken</button>
    </form>
  </div>
  <div class="row mt-2">
    <div class="col-sm-8">
      <div class="w-100" id="mapid"></div>
    </div>
  </div>
</div>

{{#each agreements}}
{{> contact/modal this}}
{{/each}}

