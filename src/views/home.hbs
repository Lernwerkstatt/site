<div class="home-bg">
  <div class="jumbotron-fluid">
    <div class="container py-2">
      <div class="row">
        <div class="col-sm-8">
          <h1 class="home-logo">
            <img class="home-logo-img" src="/img/home/fulllogo.png">
          </h1>
          <p class="home-subtitle">
            Die Lernwerkstatt ist ein altersübergreifender Lernort für Lernende
            in, außerhalb oder neben der Schule.
          </p>
        </div>
        <div class="col-sm-4">
          <div class="card bg-primary text-white overflow-hidden">
            <p class="card-header text-center">
              Kalender
            </p>
            <ul class="list-group list-group-flush overflow-auto calendar-list">
              {{#each calendar}}
              {{> home/event this}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row mt-2 mb-3">
      <div class="col-sm-12">
        <div class="card-deck text-center">
          {{#each card}}
          {{> home/card this}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>