{
  "name": "site",
  "version": "1.0.0",
  "description": "Die Lernwerkstatt Website",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config config/jest.json",
    "prod": "node src/index.js",
    "start": "npm-run-all -p nodemon browser-sync",
    "nodemon": "nodemon --exec node -r dotenv/config src/index.js",
    "browser-sync": "./browserSync.sh",
    "cypress": "cypress open",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lernwerkstatt/site.git"
  },
  "author": "Team Die Lernwerkstatt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lernwerkstatt/site/issues"
  },
  "homepage": "https://github.com/Lernwerkstatt/site#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix --config ./config/.eslintrc.json"
    ],
    "*.{css}": [
      "stylelint --fix --config ./config/.stylelintrc.json"
    ],
    "*.{hbs}": [
      "jest --config config/jest.json --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "express-handlebars": "^6.0.6",
    "fb": "^2.0.0",
    "helmet": "^6.0.0",
    "i18n": "^0.15.1",
    "moment": "^2.29.3",
    "mongodb": "^4.10.0",
    "mongoose": "^6.3.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "serve-favicon": "^2.5.0",
    "showdown": "^2.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "cypress": "^14.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^9.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.4",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-prettier": "^2.0.0"
  }
}
