{
  "name": "site",
  "version": "1.0.0",
  "description": "Die Lernwerkstatt Website",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config config/jest.json",
    "prod": "node index.js",
    "start": "npm-run-all -p cross-env nodemon browser-sync",
    "cross-env": "cross-env NODE_ENV=development",
    "nodemon": "nodemon --exec 'node -r dotenv/config' src/index.js",
    "browser-sync": "browser-sync start --no-online --no-ui --port 3001 --proxy \"localhost:3000\" --files \"src/views/\" \"static/\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lernwerkstatt/site.git"
  },
  "author": "Team Die Lernwerkstatt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lernwerkstatt/site/issues"
  },
  "homepage": "https://github.com/Lernwerkstatt/site#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier-eslint --write",
      "eslint --fix --config ./config/.eslintrc.json",
      "git add"
    ],
    "*.{css}": [
      "prettier-stylelint --write",
      "stylelint --fix --config ./config/.stylelintrc.json",
      "git add"
    ],
    "*.{hbs}": [
      "git add",
      "jest --config config/jest.json --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.18.3",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.1.0",
    "fb": "^2.0.0",
    "helmet": "^3.15.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.12",
    "mongoose": "^5.4.5",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "serve-favicon": "^2.5.0",
    "showdown": "^1.9.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "cross-env": "^5.2.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^24.3.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-prettier": "^1.0.5"
  }
}
