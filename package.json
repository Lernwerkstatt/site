{
  "name": "site",
  "version": "1.0.0",
  "description": "Die Lernwerkstatt Website",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config config/jest.json",
    "prod": "node src/index.js",
    "start": "npm-run-all -p nodemon browser-sync",
    "nodemon": "nodemon --exec node -r dotenv/config src/index.js",
    "browser-sync": "./browserSync.sh",
    "cypress": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lernwerkstatt/site.git"
  },
  "author": "Team Die Lernwerkstatt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lernwerkstatt/site/issues"
  },
  "homepage": "https://github.com/Lernwerkstatt/site#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix --config ./config/.eslintrc.json"
    ],
    "*.{css}": [
      "stylelint --fix --config ./config/.stylelintrc.json"
    ],
    "*.{hbs}": [
      "jest --config config/jest.json --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.4",
    "fb": "^2.0.0",
    "helmet": "^4.6.0",
    "i18n": "^0.13.3",
    "moment": "^2.29.1",
    "mongodb": "^4.1.3",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.0",
    "serve-favicon": "^2.5.0",
    "showdown": "^1.9.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "cypress": "^8.7.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-prettier": "^1.2.0"
  }
}
